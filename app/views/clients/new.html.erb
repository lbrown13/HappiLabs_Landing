<h1>HappiLabs</h1>

<h2>Sign Up for More Information</h2>

<%= form_tag clients_url :method => :post do %>
  <%= label_tag :name, "Name" %>
  <%= text_field_tag :name %>

  <br>

  <%= label_tag :email, "Email" %>
  <%= text_field_tag :email %>

  <br>
  <p><%= label_tag :rating, "Rating" %></p>
    <%= label_tag :rating, "1" %>
    <%= radio_button_tag(:rating, "1") %>
    <%= label_tag :rating, "2" %>
    <%= radio_button_tag(:rating, "2") %>
    <%= label_tag :rating, "3" %>
    <%= radio_button_tag(:rating, "3") %>
    <%= label_tag :rating, "4" %>
    <%= radio_button_tag(:rating, "4") %>
    <%= label_tag :rating, "5" %>
    <%= radio_button_tag(:rating, "5") %>

  <br>

  <p><%= label_tag :complaint, "Complaint:" %></p>
  <p><%= text_area_tag :complaint %></p>

  <%= label_tag :organization, "Organization" %>
  <%= text_field_tag :organization %>

  <p><%= submit_tag "Submit" %></p>

<% end %>
